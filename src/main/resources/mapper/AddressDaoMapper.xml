<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mw.logistics.logisticsservice.dao.AddressDao">

    <resultMap type="com.mw.logistics.logisticsservice.entity.Address" id="TAddressMap">
        <result property="addressId" column="address_id" jdbcType="INTEGER"/>
        <result property="businessType" column="business_type" jdbcType="INTEGER" />
        <result property="businessId" column="business_id" jdbcType="INTEGER"/>
        <result property="addressType" column="address_type" jdbcType="INTEGER" />
        <result property="contactName" column="contact_name" jdbcType="VARCHAR"/>
        <result property="contactPhone" column="contact_phone" jdbcType="VARCHAR"/>
        <result property="area" column="area" jdbcType="VARCHAR"/>
        <result property="detailsAddress" column="details_address" jdbcType="VARCHAR"/>
        <result property="createUser" column="create_user" jdbcType="VARCHAR"/>
        <result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
        <result property="modifyUser" column="modify_user" jdbcType="VARCHAR"/>
        <result property="modifyDate" column="modify_date" jdbcType="TIMESTAMP"/>
        <result property="deleteFlag" column="delete_flag" jdbcType="OTHER"/>
    </resultMap>


    <resultMap type="com.mw.logistics.logisticsservice.vo.ShipperAddressVO" id="AddressMap">
        <result property="addressId" column="address_id" jdbcType="INTEGER"/>
        <result property="businessType" column="business_type" jdbcType="INTEGER"/>
        <result property="businessId" column="business_id" jdbcType="INTEGER"/>
<!--        <result property="addressType" column="address_type" jdbcType="OTHER" typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler"/>-->
        <result property="contactName" column="contact_name" jdbcType="VARCHAR"/>
        <result property="contactPhone" column="contact_phone" jdbcType="VARCHAR"/>
        <result property="area" column="area" jdbcType="VARCHAR"/>
        <result property="detailsAddress" column="details_address" jdbcType="VARCHAR"/>

    </resultMap>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAllByVO" resultMap="AddressMap">
        select
        address_id, business_type, business_id, address_type, contact_name, contact_phone, area, details_address
        from t_address
        <where>
            <if test="addressId != null">
                and address_id = #{addressId}
            </if>
            <if test="businessType != null">
                and business_type = #{businessType}
            </if>
            <if test="businessId != null">
                and business_id = #{businessId}
            </if>
            <if test="addressType != null">
                and address_type = #{addressType}
            </if>
            <if test="contactName != null and contactName != ''">
                and contact_name = #{contactName}
            </if>
            <if test="contactPhone != null and contactPhone != ''">
                and contact_phone = #{contactPhone}
            </if>
            <if test="area != null and area != ''">
                and area = #{area}
            </if>
            <if test="detailsAddress != null and detailsAddress != ''">
                and details_address = #{detailsAddress}
            </if>


        </where>
    </select>


    <!--查询单个-->
    <select id="queryById" resultMap="TAddressMap">
        select
          address_id, business_type, business_id, address_type, contact_name, contact_phone, area, details_address, create_user, create_date, modify_user, modify_date
        from t_address
        where address_id = #{addressId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TAddressMap">
        select
          address_id, business_type, business_id, address_type, contact_name, contact_phone, area, details_address, create_user, create_date, modify_user, modify_date, delete_flag
        from t_address
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TAddressMap">
        select
          address_id, business_type, business_id, address_type, contact_name, contact_phone, area, details_address, create_user, create_date, modify_user, modify_date
        from t_address
        <where>
            <if test="addressId != null">
                and address_id = #{addressId}
            </if>
            <if test="businessType != null">
                and business_type = #{businessType}
            </if>
            <if test="businessId != null">
                and business_id = #{businessId}
            </if>
            <if test="addressType != null">
                and address_type = #{addressType}
            </if>
            <if test="contactName != null and contactName != ''">
                and contact_name = #{contactName}
            </if>
            <if test="contactPhone != null and contactPhone != ''">
                and contact_phone = #{contactPhone}
            </if>
            <if test="area != null and area != ''">
                and area = #{area}
            </if>
            <if test="detailsAddress != null and detailsAddress != ''">
                and details_address = #{detailsAddress}
            </if>
            <if test="createUser != null and createUser != ''">
                and create_user = #{createUser}
            </if>
            <if test="createDate != null">
                and create_date = #{createDate}
            </if>
            <if test="modifyUser != null and modifyUser != ''">
                and modify_user = #{modifyUser}
            </if>
            <if test="modifyDate != null">
                and modify_date = #{modifyDate}
            </if>

        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="addressId" useGeneratedKeys="true">
        insert into t_address(business_type, business_id, contact_name, contact_phone, area, details_address, create_user, create_date)
        values (#{businessType}, #{businessId},  #{contactName}, #{contactPhone}, #{area}, #{detailsAddress}, #{createUser}, #{createDate})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_address
        <set>
            <if test="businessType != null">
                business_type = #{businessType},
            </if>
            <if test="businessId != null">
                business_id = #{businessId},
            </if>
            <if test="addressType != null">
                address_type = #{addressType},
            </if>
            <if test="contactName != null and contactName != ''">
                contact_name = #{contactName},
            </if>
            <if test="contactPhone != null and contactPhone != ''">
                contact_phone = #{contactPhone},
            </if>
            <if test="area != null and area != ''">
                area = #{area},
            </if>
            <if test="detailsAddress != null and detailsAddress != ''">
                details_address = #{detailsAddress},
            </if>
            <if test="modifyUser != null and modifyUser != ''">
                modify_user = #{modifyUser},
            </if>
            <if test="modifyDate != null">
                modify_date = #{modifyDate},
            </if>

        </set>
        where address_id = #{addressId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_address where address_id = #{addressId}
    </delete>

</mapper>